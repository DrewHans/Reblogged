@model BlogGetUserViewModel
@{
    ViewData["Title"] = "Blog User";
}

<!-- Blog breadcrumb navigation -->
<br><br>
<ol class="breadcrumb">
  <li><a asp-area="" asp-controller="Blog" asp-action="Index">Blog Home</a></li>
  <li class="active">View User</li>
</ol>

<h2><span class="glyphicon glyphicon-user"></span> @ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

@if(Model == null)
{
    <p>User information could not be retrieved. Are you sure they exist?</p>
}
else
{
    <p>UserName: @Model.User.UserName</p>
    <p>Date Registered: @Model.User.TimeRegistered</p>
    <br>
    <p>All posts by user:</p>
    @foreach(BlogPostDTOModel post in Model.ListOfPosts)
    {
        <p><span class="glyphicon glyphicon-file"></span> @Html.ActionLink(@post.PostTitle, "GetPost", "Blog", new {id = @post.PostId}, null)</p>
    }
}
